<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="input_outline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textSize">18sp</item>
        <item name="colorPrimary">@color/colorPrimaryForm</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/error</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/purple_200</item>

    </style>
    <style name="btn_gradient_blue" parent="TextAppearance.AppCompat.Widget.Button">
       <item name="background">@drawable/gradient_blue</item>
        <item name="backgroundTint">@null</item>
    </style>

</resources>