<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:background="@drawable/cardview"
        android:padding="12dp"
        tools:ignore="MissingConstraints">
        <!--Values container-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monto: "
                    android:textColor="@color/text_title_item"
                    android:textSize="@dimen/text_title_item"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/monto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textColor="@color/text_subtitle_item"
                    android:textSize="@dimen/text_subtitle_item"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="@color/text_subtitle_item"
                android:textSize="@dimen/text_subtitle_item"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <!-- right container-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="@color/text_corner_item"
                android:textSize="@dimen/text_corner_item"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/fechaCorte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:textColor="@color/text_corner_item"
                android:textSize="@dimen/text_corner_item_subtitle"
                android:gravity="right"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>